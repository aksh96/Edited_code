<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".gui.Login"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="  LOGIN HERE...!!!"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="28sp"
        android:textStyle="normal|bold"
        android:textColor="#602386"
        android:id="@+id/textView13">
    </TextView>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
         android:layout_weight="0.18">

        <!-- ICON -->
        <ImageView
            android:padding="1dp"
            android:id="@+id/username_icon"
            android:src="@drawable/username2"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />

        <!-- ICON -->
        <ImageView
            android:padding="0.5dp"
            android:id="@+id/password_icon"
            android:src="@drawable/lock1"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_below="@id/username_icon"
            android:layout_marginLeft="5dp"
            />


        <FrameLayout
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/frameLayout">

        </FrameLayout>

        <EditText
            android:id="@+id/username"
            android:hint="Username"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColorHint="#602386"
            android:textColor="#602386"
            android:layout_marginRight="10dp"
            android:textStyle="normal|bold"
            android:gravity="left"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/username_icon"
            android:layout_toEndOf="@+id/username_icon" />

        <EditText
            android:id="@+id/password"
            android:hint="Password"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text|textPassword"
            android:textColorHint="#602386"
            android:textColor="#602386"
            android:selectAllOnFocus="false"
            android:textStyle="normal|bold"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:layout_alignBottom="@+id/password_icon"
            android:layout_toEndOf="@+id/username_icon" />

        <Button
            android:layout_width="117dp"
            android:layout_height="30dp"
            android:id="@+id/loginbutton"
            android:text="Login"
             android:textColor="#FFFFFF"
            android:background="#602386"
            android:padding="2dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:textAlignment="center"
            android:onClick=""
            android:layout_alignBottom="@+id/frameLayout"
            android:layout_alignStart="@+id/frameLayout"
            android:layout_marginBottom="28dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/newUser_textView"
        android:text="   New User ?"
        android:textColor="#602386"
        android:gravity="center"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textAlignment="center"
        ></TextView>
</LinearLayout>
